<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCollectionControls.Pages.ListViewDemo"
             Title="ListViewDemo">
    <ListView x:Name="listView" HasUnevenRows="True" SeparatorColor="Red" SelectionMode="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="10" BackgroundColor="Bisque">
                        <Label Text="{Binding Title}" TextColor="Red" FontAttributes="Bold" HorizontalOptions="Center" />
                        <Label Text="{Binding Description}" TextColor="Blue" FontAttributes="Bold" HorizontalOptions="Center" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>